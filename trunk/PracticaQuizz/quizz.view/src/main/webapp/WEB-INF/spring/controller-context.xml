<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="empleadoController" class="com.spring3.rest.controller.EmpleadoController">
		<property name="empleadoBO" ref="empleadoBO" />
		<property name="jaxb2Mashaller" ref="jaxbMarshaller" />
	</bean>
	
	<bean id="jaxbMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
		<property name="classesToBeBound">
			<list>
				<value>com.spring3.rest.bean.Empleado</value>
				<value>com.spring3.rest.bean.EmpleadoLista</value>
			</list>
		</property>
	</bean>

	<bean id="empleados" class="org.springframework.web.servlet.view.xml.MarshallingView">
		<constructor-arg ref="jaxbMarshaller" />
	</bean>
</beans>
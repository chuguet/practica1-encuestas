<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.spring3.rest.bean" >

    <class name="Empleado" table="empleado" >
        <id name="id" column="id" type="long">
        	 <generator class="increment"/>
        </id>
        <property name="nombre" column="nombre" type="string" />
        <property name="email" column="email" type="string" />
        <property name="expediente" column="expediente" type="string" />
        <property name="telefono" column="telefono" type="string" />
        <property name="movil" column="movil" type="string" />
        <property name="direccion" column="direccion" type="string" />
        <property name="image" column="image" type="string" />
    </class>
</hibernate-mapping>